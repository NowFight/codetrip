<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.codetrip.dao.contest.ContestDao">
    <resultMap id="contestResultMap" type="ContestModel">
        <id property="contestId" column="contest_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="createDate" column="create_date"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="privation" column="private"/>
        <result property="password" column="password"/>
    </resultMap>

    <!-- insert -->
    <insert id="insertContest" parameterType="ContestModel" useGeneratedKeys="true" keyProperty="contestId">
        INSERT INTO contest
        (
          user_id,      <!-- 1 -->
          title,        <!-- 2 -->
          create_date,  <!-- 3 -->
          start_time,   <!-- 4 -->
          end_time,     <!-- 5 -->
          private,      <!-- 6 -->
          password      <!-- 7 -->
        )
        VALUES
        (
          #{userId},    <!-- 1 -->
          #{title},     <!-- 2 -->
          #{createDate},<!-- 3 -->
          #{startTime}, <!-- 4 -->
          #{endTime},   <!-- 5 -->
          #{privation}, <!-- 6 -->
          #{password}   <!-- 7 -->
        )
    </insert>

    <!-- select -->
    <select id="queryContestByContestId" parameterType="int" resultMap="contestResultMap">
        SELECT * FROM contest WHERE contest_id = #{id}
    </select>

    <select id="queryAllContests" resultMap="contestResultMap">
        SELECT * FROM contest
    </select>

    <!-- update -->
    <update id="updateContestByContestId" parameterType="ContestModel">
        UPDATE contest
        <set>
            <if test="contestId != null">contest_id = #{contestId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createDate != null">create_date = #{createDate},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="privation != null">private = #{private},</if>
            <if test="password != null">password = #{password}</if>
        </set>
        WHERE contest_id = #{contestId}
    </update>
</mapper>
