<!DOCTYPE html>
<html lang="zh">

    #parse("/common/head.vm")

<body>

<!-- navigator -->

    #parse("/common/navigator.vm")

<div class="container">
    <div class="row">
        <div class="col-md-2 sidebar">
            <ul class="nav nav-sidebar">
            #if($sidebarItem == "description")
                <li class="active"><a>添加描述</a></li>
                <li><a>添加元数据</a></li>
                <li><a>添加测试数据</a></li>
            #elseif($sidebarItem == "metainfo")
                <li><a>添加描述</a></li>
                <li class="active"><a>添加元数据</a></li>
                <li><a>添加测试数据</a></li>
            #elseif($sidebarItem == "testcase")
                <li><a>添加描述</a></li>
                <li><a>添加元数据</a></li>
                <li class="active"><a>添加测试数据</a></li>
            #end
            </ul>
            <ul class="nav nav-sidebar">
                <li>
                    <a href="$root/profile/addproblem/exit">退出</a>
                </li>
            </ul>
        </div>

        <div class="col-md-8 col-md-offset-2">
            #parse("/common/spacebar.vm")

            <!-- 添加元数据 -->
            #if($sidebarItem == "metainfo")
                <div class="row">
                    <form class="form" action="$root/profile/addproblem/metainfo" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">时间限制 (MS)</div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="basic-addon1">C/C++</span>
                                                <input type="text" class="form-control" name="timeLimit" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="basic-addon1">Java</span>
                                                <input type="text" class="form-control" name="timeLimit" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">内存限制 (KB)</div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="basic-addon1">C/C++</span>
                                                <input type="text" class="form-control" name="memoryLimit" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="basic-addon1">Java</span>
                                                <input type="text" class="form-control" name="memoryLimit" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">Special Judge</div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="specialJudge" value="NO" checked>
                                                    <span class="label label-info">Normal Judge</span>
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="specialJudge" value="YES">
                                                    <span class="label label-danger">Special Judge</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">可访问性（默认PUBLIC）</div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="visiable" value="YES" checked>
                                                    <span class="label label-info">Public</span>
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="visiable" value="NO">
                                                    <span class="label label-danger">Private</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">提示</div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <textarea class="form-control" rows="5" name="hint"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">提交</button>
                    </form>
                </div>
            #end

            <!-- 添加描述 -->
            #if($sidebarItem == "description")
                <div class="row">
                    <form action="$root/profile/addproblem/description" method="post">
                        <!-- title -->
                        <div class="panel panel-default">
                            <div class="panel-heading">标题</div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="problemtitle" name ="title" required>
                                </div>
                            </div>
                        </div>

                        <!-- problem description -->
                        <div class="panel panel-default">
                            <div class="panel-heading">描述</div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <textarea class="form-control" rows="10" name="description" required></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- input description -->
                        <div class="panel panel-default">
                            <div class="panel-heading">输入描述</div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <textarea class="form-control" rows="5" name="inputdescription" required></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- ouput description -->
                        <div class="panel panel-default">
                            <div class="panel-heading">输出描述</div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <textarea class="form-control" rows="5" name="outputdescription" required></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Sample input -->
                        <div class="panel panel-default">
                            <div class="panel-heading">输入例子</div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <textarea class="form-control" rows="5" name="sampleinput" required></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Sample output -->
                        <div class="panel panel-default">
                            <div class="panel-heading">输出例子</div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <textarea class="form-control" rows="5" name="sampleoutput" required></textarea>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            #end

            <!-- 添加测试数据 -->
            #if($sidebarItem == "testcase")
                <div class="row">
                    <div class="panel panel-default">
                        #set($case = $col + $row * 3)
                        <div class="panel-heading">添加测试用例</div>
                        <div class="panel-body">
                            <form action="$root/profile/addproblem/testcase" method="post">
                                <div class="form-group">
                                    <textarea class="form-control" rows="4" name="testData" placeholder="请输入测试数据" required></textarea>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" rows="4" name="standardOutput" placeholder="请输入标准输出" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                #set($caseNumber = 1)
                #foreach($case in $testcases)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <span class="label label-info">TEST $caseNumber</span>
                                            #set($caseNumber = $caseNumber + 1)
                                        </div>
                                        <!-- <div class="col-md-1 col-md-offset-5">
                                            <a role="button" class="btn btn-success btn-xs" href="$root/profile/addproblem/testcase/extend/$case">
                                                #if($case == $extend)
                                                    收起
                                                #else
                                                    展开
                                                #end
                                            </a>
                                        </div> -->
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <span class="label label-default">测试数据:</span>
                                        </div>
                                        <div class="col-md-10">
                                            <pre>$case.testData</pre>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <span class="label label-default">标准输出:</span>
                                        </div>
                                        <div class="col-md-10">
                                            <pre>$case.standardOutput</pre>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                #end
            #end
        </div>
    </div>
    #parse("/common/footer")
</div>

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="http://cdn.bootcss.com/jquery/1.11.2/jquery.min.js"></script>
<script src="http://cdn.bootcss.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</body>
</html>