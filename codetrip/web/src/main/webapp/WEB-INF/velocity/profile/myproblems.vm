<div class="col-md-8 col-md-offset-2">

    <div class="row">
        <div class="col-md-12">
            <!-- problems -->
            #parse("/common/spacebar.vm")
            <div class="row">
                <div class="col-md-2 col-md-offset-10">
                    <a class="btn btn-success" href="$root/profile/addproblem/sidebar/description" role="button">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> 新增
                    </a>
                </div>
            </div>

            <hr/>

            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Title</th>
                    <th class="text-center">Sorts</th>
                    <th class="text-center">Solved</th>
                    <th class="text-center">Edit</th>
                </tr>
                </thead>
                <tbody>
                    #set($index = $problems.size())
                    #foreach($problem in $problems)
                    <tr>
                        <td class="text-center">$index</td>
                        <td class="text-center"><a href="#">$problem.title</a></td>
                        <td class="text-center">None</td>
                        <td class="text-center">0</td>
                        <td class="text-center">
                            <a href="$root/profile/addproblem/edit/pid/$problem.problemId" class="black-icon">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                        #set($index = $index - 1)
                    #end
                </tbody>
            </table>
        </div>

    </div>
</div>