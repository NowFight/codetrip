<!DOCTYPE html>
<html lang="zh">
#parse("common/head.vm")
<body>
    #parse("common/navigator.vm")
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1 class="text-center">$title</h1>
            <form role="form" action="$root/commit/problem/$problemId" method="post">
                <div class="row">
                    <div class="col-md-2 col-md-offset-10">
                        <div class="form-group">
                            <select class="form-control" name="language">
                                <option>GCC</option>
                                <option>G++</option>
                                <option>Java</option>
                                <option>Python</option>
                                <option>Perl</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="15" name="codecontext"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success">提交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>