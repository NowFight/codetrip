<!DOCTYPE html>
<html lang="zh">

    #parse("com/head.vm")

<body>
<!-- navigator -->
    #set($nav_active_item = "Contests")
    #parse("common/navigator.vm")

    <div class="container">
        #parse("common/spacebar.vm")
        <div class="alert alert-success" role="alert">
            <p>New Mission</p>
        </div>
        #if($contest_select_item == "starting")
        <div class="row">
            <div class="col-md-4">
                <div class="list-group">
                    <a href="./starting-contests" class="list-group-item active">Starting Contests</a>
                    <a href="./comeing-contests" class="list-group-item">
                        <span class="badge">2</span>Comeing Contests
                    </a>
                    <a href="./passed-contests" class="list-group-item">Passed Contests</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">Starting Contests</div>

                    <!-- Table -->
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Title</th>
                            <th class="text-center">Start Time</th>
                            <th class="text-center">End Time</th>
                            <th class="text-center">Solved</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($i in [1 .. 3])
                            <tr>
                                <td class="text-center">$i</td>
                                <td class="text-center">Simple A + B</td>
                                <td class="text-center"><span class="label label-success">2014-1-23</span></td>
                                <td class="text-center"><span class="label label-danger">2014-1-23</span></td>
                                <td class="text-center">100</td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        #elseif($contest_select_item == "comeing")
        <div class="row">
            <div class="col-md-4">
                <div class="list-group">
                    <a href="./starting-contests" class="list-group-item">
                        <span class="badge">3</span>Starting Contests
                    </a>
                    <a href="./comeing-contests" class="list-group-item active">Comeing Contests</a>
                    <a href="./passed-contests" class="list-group-item">Passed Contests</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="panel panel-info">
                    <div class="panel-heading">Comeing Contests</div>

                    <!-- Table -->
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Title</th>
                            <th class="text-center">Start Time</th>
                            <th class="text-center">End Time</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($i in [1 .. 2])
                            <tr>
                                <td class="text-center">$i</td>
                                <td class="text-center">Simple A + B</td>
                                <td class="text-center"><span class="label label-success">2014-1-23</span></td>
                                <td class="text-center"><span class="label label-danger">2014-1-23</span></td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        #elseif($contest_select_item == "passed")
        <div class="row">
            <div class="col-md-4">
                <div class="list-group">
                    <a href="./starting-contests" class="list-group-item">
                        <span class="badge">3</span>Starting Contests
                    </a>
                    <a href="./comeing-contests" class="list-group-item">
                        <span class="badge">2</span>Comeing Contests
                    </a>
                    <a href="./passed-contests" class="list-group-item active">Passed Contests</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="panel panel-success">
                    <div class="panel-heading">Passed Contests</div>

                    <!-- Table -->
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Title</th>
                            <th class="text-center">Start Time</th>
                            <th class="text-center">End Time</th>
                            <th class="text-center">Solved</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($i in [1 .. 10])
                            <tr>
                                <td class="text-center">$i</td>
                                <td class="text-center">Simple A + B</td>
                                <td class="text-center"><span class="label label-success">2014-1-23</span></td>
                                <td class="text-center"><span class="label label-danger">2014-1-23</span></td>
                                <td class="text-center">100</td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        #end
        #parse("common/footer.vm")
    </div>
</body>
</html>